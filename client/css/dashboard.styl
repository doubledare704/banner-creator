dashboard-success-color = #d3ffce
dashboard-error-color = #ffc0cb
dashboard-menu-color = #003366
dashboard-common-color = #eeeeee
dashboard-menu-active-color = #00274E
dashboard-comment-color = #dedede


.review-section
  padding: 20px
  background-color: dashboard-common-color
  border-radius: 10px
  margin-bottom 10px
  &:hover
    box-shadow: 0 0 10px rgba(0,0,0,0.5)

.dashboard-menu
  list-style: none
  padding: 10px
  li
    padding: 10px
    background-color: dashboard-menu-color
    margin: 2px
    border-radius: 5px
    &.dashboard-menu-active
      background-color: dashboard-menu-active-color
    a
      color: #f0f8ff
      text-decoration: none

.dashboard-reviwer-name
  color: dashboard-menu-color

.dashboard-review-date
  color: dashboard-menu-color

.dashboard-show-banner
  cursor: pointer
  margin-bottom: 5px

.dashboard-review-banner
  display: none
  margin-bottom: 5px

.review-section-success
  background-color: dashboard-success-color

.review-section-rejected
  background-color: dashboard-error-color

.dashboard-banners-container
  padding: 15px
  margin-bottom: 10px
  border-radius: 5px
  background-color: dashboard-common-color

.dashboard-banner-title
.dashboard-review-title
  font-weight: bold

.pagination-container
  text-align: center

.dashboard-to-review-btn
  a
    text-decoration: none

.dashboard-comment-text
  padding: 10px
  border-radius: 5px
  background-color: dashboard-comment-color

.review-section-rejected .dashboard-comment-text,
.review-section-success .dashboard-comment-text
  background-color: whitesmoke

.dashboard-review-container
  cursor: pointer

.dashboard-banner-preview:hover
  cursor: zoom-in

.dashboard-banner-container
  .thumbnail:hover
    box-shadow: 0 0 10px rgba(0,0,0,0.5)

.dashboard-delete-btn
  cursor: pointer
  color: red
  float: right
  right: 0
  display: none

.review-section:hover
  .dashboard-delete-btn
    display: inline

.dashboard-user-empty-review,
.dashboard-designer-empty-review
  padding: 10px
  border-radius: 5px
  font-size: 1.5em
  font-family: Times New Roman
  a
    color: dashboard-menu-active-color
    text-decoration: none

.dashboard-comments .dashboard-media-heading {
    margin-top: 25px;
}

.dashboard-comments .dashboard-comment-info {
    margin-left: 6px;
    margin-top: 21px;
}

.dashboard-comments .dashboard-comment-info .btn {
    font-size: 0.8em;
}

.dashboard-comments .dashboard-comment-info .fa {
    line-height: 10px;
}

.dashboard-comments .dashboard-media-body p {
    position: relative;
    background: #F7F7F7;
    padding: 15px;
    margin-top: 50px;
}

.dashboard-media-body p::before {
    background-color: #F7F7F7;
    box-shadow: -2px 2px 2px 0 rgba( 178, 178, 178, .4 );
    content: "\00a0";
    display: block;
    height: 30px;
    left: -14px;
    position: absolute;
    top: 7px;
    transform: rotate( 48deg );
    width:  30px;
}

.dashboard-white {
    color: #fff;
}

.dashboard-well {
  min-height: 20px;
  padding: 10px;
  margin-bottom: 20px;
  background-color: #f5f5f5;
  border: 1px solid #e3e3e3;
  border-radius: 4px;
  -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.05);
  box-shadow: inset 0 1px 1px rgba(0,0,0,.05);
}

.dashboard-comment-wrapper
  position: relative
  margin: 50px
  border: 1px solid red
  width: 960px
  height: 420px
  background-position: center center
  background-repeat: no-repeat
  background-size: fill