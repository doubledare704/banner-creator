dashboard-success-color = #d3ffce
dashboard-error-color = #ffc0cb
dashboard-menu-color = #003366
dashboard-common-color = #eeeeee

.review-section
  padding: 20px
  background-color: dashboard-common-color
  border-radius: 10px
  margin-bottom 15px

.dashboard-menu
  list-style: none
  padding: 10px
  li
    padding: 10px
    background-color: dashboard-menu-color
    margin: 2px
    border-radius: 5px
    a
      color: #f0f8ff
      text-decoration: none

.dashboard-reviwer-name
  color: dashboard-menu-color

.dashboard-show-banner
  cursor: pointer

.dashboard-review-banner
  display: none

.review-section-success
  background-color: dashboard-success-color

.review-section-rejected
  background-color: dashboard-error-color
