@require '~normalize-styl'
@require 'dashboard.styl'
@require 'user_profile.styl'

html, body
  height 100%

.column_aside
  height 800px
  display flex
  flex-wrap wrap
  flex-direction column
  align-items stretch
  position relative

  section
    text-align center
    align-content center
    position relative
    height 80px
    width 80px
    border 1px solid #000
    margin 7px 0 0 0
    white-space inherit
    padding 0

    a
      color #000000
      text-decoration none
      font-size 12px

  span
    display block
    font-size 12px

section#double
  height 160px
  display none

  section
    margin 0
    border 0

section.last-sec
  margin-top auto
  margin-bottom 0

section.with_menu:hover > #rightcol
  display block

.container2
  order: 2
  flex-basis 100%
  height 100%

.navigation
  display flex
  flex-direction row
  align-items center
  align-content center
  border 2px solid #000000
  border-left 0

  a
    padding 30px 50px
    justify-content flex-start
    color #000000
    text-decoration none

    i
      vertical-align text-bottom

  a.special
    text-align right
    margin-left auto
    padding-right 20px

.container-content
  margin 1% 0%
  display inline-block

.canvas-container
  margin 0

.forcanvas
  padding 0
  margin 0
  overflow auto
  max-height 730px

.nopad
  padding 0

section.counter-grid
  height auto

  .number-input
    display block
    margin 0 auto
    width 55%
    height 25%
    padding 6px 0

canvas#main
  border 2px solid #000000

#backgroundsContainer
  position: absolute
  z-index 3
  left: 83px
  top: 0
  border: 1px solid black
  background-color: white
  #backgroundsList
    list-style: none
    padding: 5px
    height: 400px
    overflow: hidden
    overflow-y: scroll
    li
      margin: 2px
      img
        border: 1px solid black
        height: 100px
        width: 100px

#rightcol
  display none
  position absolute
  background-color #ffffff
  border 1px solid #000
  width 412px
  text-align left
  padding-left 10px
  top -3%
  left 101%
  z-index 2

  ul
    list-style-type none

  li
    line-height 200%
    cursor pointer

  .head1
    font-size 40px

  .head2
    font-size 30px

  .head3
    font-size 17px

  .head4
    font-size 13px

#inputted
  display none

.hidden
  display: none

.modal-content
  position: relative
  background-color: #fefefe
  margin: auto
  padding: 0
  border: 1px solid #888
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19)
  -webkit-animation-name: animatetop
  -webkit-animation-duration: 0.4s
  animation-name: animatetop
  animation-duration: 0.4s

  img
    display block
    margin 0 auto

/* Add Animation */
@-webkit-keyframes animatetop
  from {
    top: -300px
    opacity: 0
  }
  to {
    top: 0
    opacity: 1
  }

@keyframes animatetop
  from {
    top: -300px
    opacity: 0
  }
  to {
    top: 0
    opacity: 1
  }

#result_review, #continue
  display none

.box-like-a-boss
  display flex
  flex-wrap wrap
  flex-direction row-reverse
  height auto

  .box-item
    flex-basis 33%
    box-shadow 0 0 0 1px rgba(0, 0, 0, 0.1)

    img
      height auto
      width 100%

#popup
  position fixed
  left 20%
  top 15%
  z-index 5

.btn-wrapper
  display: inline-block
  margin: 2px

.img-wrapper
  height: 200px
  background-position: center center
  background-repeat: no-repeat
  background-size: contain

.img-popup
  height: 480px
  background-position: center center
  background-repeat: no-repeat
  background-size: contain

#backgrounds-table tbody tr td
  vertical-align: middle

#backgrounds-table thead tr th
  text-align: center

#backgrounds-table tbody tr td img
  height: 200px

.rightcol2
  display none
  position absolute
  background-color #ffffff
  border 2px dashed #000
  width 500px
  text-align left
  padding-left 20px
  top -150%
  left 79px
  z-index 2

  .uploadings
    display flex
    flex-wrap wrap
    flex-direction column
    height auto

    .lm
      flex-basis 50px

      i
        vertical-align: middle;

section.last-sec:hover > .rightcol2
  display block

.login_block
  img
    width 100px

  a:link
    color #000000
    text-decoration none

.list-cuted
  display none

  div
    flex-basis 250px
    overflow hidden

    .boxer
      height 156px

#from_db:hover .list-cuted
  display flex
  overflow auto
  background-color #fff
  flex-wrap wrap
  flex-direction row
  position absolute
  top -250%
  left 70px
  border 1px dashed #000
  height 700px
  width 1277px

#cutters
  cursor: pointer;
