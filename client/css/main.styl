@require '~normalize-styl'


html,body
  height 100%

box-shadow(args...)
  -webkit-box-shadow args
  -moz-box-shadow args
  box-shadow args

canvas#c
  border 1px dashed #ff9e2a
  box-shadow -16px 18px 95px -23px rgba(0, 0, 0, 0.75)

.block
  display block

.fontpack, .sizepack
  display inline-block
  float right
  min-width 20%

.wrapper
  height 100%
  display flex
  flex-wrap wrap
  flex-direction row
  justify-content flex-start
  align-items flex-start

.column_aside
  flex 1
  order 1
  flex-basis 100%
  height 99.5%

  display flex
  flex-wrap wrap
  flex-direction column
  justify-content center
  align-items stretch
  border 2px solid #000000


  section
    flex-basis 17%
    text-align center
    align-content center

    a
      color #000000
      text-decoration none

  span
    display block

.last-sec
  display flex
  flex-direction column-reverse
  align-items center
  align-content flex-start
  justify-content flex-start

.container
  order: 2
  flex-basis 100%
  height 100%

.navigation
  display flex
  flex-direction row
  align-items center
  align-content center
  border 2px solid #000000
  border-left 0
  a
    padding 30px 50px
    justify-content flex-start
    color #000000
    text-decoration none

    i
      vertical-align text-bottom

  a.special
    text-align right
    margin-left auto
    padding-right 20px

@media (min-width: 600px)
  .wrapper
    flex-wrap nowrap

  .column_aside
    flex-basis 12%
    order 1

  .container
    flex-basis 88%
    order 2

.container-content
  margin 10%

canvas#main
  border 2px solid #000000

#backgroundsContainer
  position: absolute
  left: 225px
  top: 85px
  border: 1px solid black
  background-color: white
  #backgroundsList
    list-style: none
    display: none
    padding: 0
    height: 400px
    overflow: hidden
    overflow-y: scroll
    img
      border: 2px solid black
      height: 100px
      width: 100px
